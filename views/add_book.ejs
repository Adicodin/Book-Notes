  </div>
  <div class="container m-3 p-3">
    <form action="/add-book" method="post">
      <div class="mb-3 row">
        <label for="book_name" class="col-sm-6 col-form-label fs-4 fw-medium border">Book Name</label>
        <div class="col-sm-6">
          <input type="text" class="form-control border" name="book_name" id="book_name">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="author_name" class="col-sm-6 col-form-label fs-4 fw-medium border">Author Name</label>
        <div class="col-sm-6">
          <input type="text" class="form-control border" name="author_name" id="author_name">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="isbn_number" class="col-sm-6 col-form-label fs-4 fw-medium border">ISBN Number</label>
        <div class="col-sm-6">
          <input type="text" class="form-control border" name="isbn_number" id="isbn_number">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="rating" class="col-sm-6 col-form-label fs-4 fw-medium border">Rating (Best : 10 | Worst : 1)</label>
        <div class="col-sm-6">
          <input type="text" class="form-control border" name="rating" id="rating">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="summary" class="col-sm-6 col-form-label fs-4 fw-medium border">Summary</label>
        <div class="col-sm-6">
          <textarea type="text" class="form-control border" id="summary" name="summary" rows="3"></textarea>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="notes" class="col-sm-6 col-form-label fs-4 fw-medium border">Notes</label>
        <div class="col-sm-6">
          <textarea type="text" class="form-control border" id="notes" name="notes" rows="10"></textarea>
        </div>
      </div>
      <div class="mb-3 row">
        <button class="btn btn-success" type="submit">Add Book</button>
      </div>
    </form>
  </div>
  <%- include('partials/footer.ejs'); -%>

